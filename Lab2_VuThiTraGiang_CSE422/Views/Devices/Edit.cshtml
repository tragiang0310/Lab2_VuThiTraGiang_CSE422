@model Lab2_VuThiTraGiang_CSE422.Models.DeviceDto

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Edit Device</h2>
        <form method="post" enctype="multipart/form-data">

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">ID</label>
                <div class="col-sm-8">
                    <input class="form-control-plaintext" value="@ViewData["ID"]" readonly />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Code</label>
                <div class="col-sm-8">
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Name</label>
                <div class="col-sm-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Category</label>
                <div class="col-sm-8">
                    <input class="form-control-plaintext" value="@ViewData["CategoryName"]" readonly />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Status</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="Status">
                        @foreach (var status in (SelectList)ViewBag.StatusOptions)
                        {
                            if(status.Value == Model.Status)
                            {
                                <option value="@status.Value" selected>@status.Text</option>
							}
							else{
								<option value="@status.Value">@status.Text</option>
                            }
                        }
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class=" col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Devices" asp-action="Index" role="button">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>

