@model List<DeviceCategory>

@{
    ViewData["Title"] = "Index";
}

<h2 class="text-center mb-5">List of Device Categories</h2>

<div class="row mb-5">
    <div class="col">
        <a class="btn btn-primary" asp-controller="DeviceCategories" asp-action="Create">New Device Category</a>
    </div>
    <div class="col">

    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Created At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.ID</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.CreatedAt.ToString("MM/dd/yyyy")</td>
            <td style="white-space:nowrap">
                <a class="btn btn-primary btn-sm" asp-controller="DeviceCategories" asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a class="btn btn-danger btn-sm" asp-controller="DeviceCategories" asp-action="Delete" asp-route-id="@item.ID" onclick="return confirm('Are you sure you want to delete this?')">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
