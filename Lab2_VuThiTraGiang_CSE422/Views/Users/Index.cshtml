 @model List<Lab2_VuThiTraGiang_CSE422.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h2 class="text-center mb-5">List of Users</h2>

<div class="row mb-5">
    <div class="col">
        <a class="btn btn-primary" asp-controller="Users" asp-action="Create">New User</a>
    </div>
    <div class="col">
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Created At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.FullName</td>
                    <td>@item.Email</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.CreatedAt.ToString("MM/dd/yyyy")</td>
                    <td style="white-space:nowrap">
                        <a class="btn btn-primary btn-sm" asp-controller="Users" asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                        <a class="btn btn-danger btn-sm" asp-controller="Users" asp-action="Delete" asp-route-id="@item.ID" onclick="return confirm('Are you sure you want to delete this?')">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <p>No data available.</p>
        }
    </tbody>
</table>
